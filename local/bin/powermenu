#! /bin/sh

chosen=$(printf "  Shutdown\n  Reboot\n  Suspend\n  Logout\n󰌾  Lock" | rofi -dmenu -i -theme-str '@import "power.rasi"')

case "$chosen" in
	"  Shutdown") poweroff ;;
	"  Reboot") reboot ;;
	"  Suspend") systemctl suspend ;;
	"  Logout") bspc quit ;;
	"󰌾  Lock") light-locker-command -l ;;
	*) exit 1 ;;
esac
